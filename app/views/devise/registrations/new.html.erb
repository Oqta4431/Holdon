<div class="flex flex-col justify-center items-center min-h-[70vh]">
  <div class="w-full">

    <!-- メインのサインアップカード -->
    <div class="card bg-base-100 shadow-md">
      <div class="card-body space-y-4">

        <h1 class="text-xl font-bold text-center">アカウント登録</h1>

        <%= form_with model: resource,
                      as: resource_name,
                      url: registration_path(resource_name),
                      data: { turbo: false },
                      class: "space-y-4" do |f| %>

          <!-- お名前 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">お名前</span>
            </label>
            <%= f.text_field :name,
                  autocomplete: "name",
                  class: "input input-bordered w-full" %>
          </div>

          <!-- メールアドレス -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">メールアドレス</span>
            </label>
            <%= f.email_field :email,
                  autocomplete: "email",
                  class: "input input-bordered w-full" %>
          </div>

          <!-- パスワード -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">パスワード</span>
            </label>
            <%= f.password_field :password,
                  autocomplete: "new-password",
                  class: "input input-bordered w-full" %>
          </div>

          <!-- パスワード確認 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">パスワード（確認用）</span>
            </label>
            <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  class: "input input-bordered w-full" %>
          </div>

          <!-- サインアップボタン -->
          <div class="form-control pt-2">
            <%= f.submit "サインアップ",
                  class: "btn btn-primary w-full" %>
          </div>
        <% end %>

      </div>
    </div>

    <!-- ログイン誘導エリア -->
    <div class="mt-6 text-center text-sm space-y-2">
      <p>既にアカウントを持っている？</p>
      <%= link_to "ログイン",
            new_user_session_path,
            class: "btn btn-secondary w-full" %>
    </div>

  </div>
</div>
