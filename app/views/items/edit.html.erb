<div class="flex flex-col justify-center items-center min-h-[70vh]">
  <div class="w-full">

    <!-- メインのログインカード -->
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body space-y-4">

        <h1 class="text-xl font-bold text-center">商品編集</h1>

        <%= form_with model: @item, class: "space-y-4" do |f| %>

          <!-- 商品名：必須 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">商品名*</span>
            </label>
            <%= f.text_field :name, class: "input input-bordered w-full" %>
          </div>

          <!-- 金額：必須 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">値段*</span>
            </label>
            <%= f.number_field :price, class: "input input-bordered w-full" %>
          </div>

          <!-- URL：任意 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">URL</span>
            </label>
            <%= f.text_field :url, class: "input input-bordered w-full", placeholder: "https://example.com" %>
          </div>

          <!-- 登録時のメモ：任意 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold">メモ</span>
            </label>
            <%= f.text_area :memo, class: "textarea textarea-bordered w-full", rows: 4, placeholder: "説明" %>
          </div>

          <!-- 登録ボタン -->
          <div class="form-control pt-2">
            <%= f.submit "更新", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
